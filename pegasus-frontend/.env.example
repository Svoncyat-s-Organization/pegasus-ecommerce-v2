# API Configuration
VITE_API_BASE_URL=http://localhost:8080/api

# Environment
VITE_ENV=development

# Logging (optional)
VITE_ENABLE_LOGS=true

# Cloudinary Configuration (for image uploads)
# Get these values from: https://console.cloudinary.com/settings/api-keys
VITE_CLOUDINARY_CLOUD_NAME=dek8cfafe
VITE_CLOUDINARY_UPLOAD_PRESET=pegasus_unsigned

# Instructions:
